        {
          "Host": "eshop.api",
          "Port": 80
        }
      ],
      "DownstreamPathTemplate": "/api/Orders"
    },
    {
      "UpstreamPathTemplate": "/api/Basket",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
